            }
          },
          "404": {
            "description": "Not Found - Administrador não encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "409": {
            "description": "Conflict - E-mail já cadastrado",
